<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswortVerwalterApp.Views.DetailPage"
             Title="DetailPage">

    <ContentPage.Content>
        <VerticalStackLayout Padding="150,20">
            <Label FontSize="20" HeightRequest="30" Text="Konto:"></Label>
            <Label Margin="30,0" FontSize="20" HeightRequest="50" x:Name="konto" Text=""></Label>
            <Label FontSize="20" HeightRequest="30" Text="E-Mail:"></Label>
            <Label Margin="30,0" FontSize="20" HeightRequest="50" x:Name="email" Text=""></Label>
            <Label FontSize="20" HeightRequest="30" Text="Benutzername:"></Label>
            <Label Margin="30,0" FontSize="20" HeightRequest="50" x:Name="benutzername" Text=""></Label>
            <Label FontSize="20" HeightRequest="30" Text="Passwort:"></Label>
            <Label Margin="30,0" FontSize="20"  HeightRequest="50"  x:Name="passwort" Text=""></Label>
            <Button Margin="80,10" Text="Löschen" Clicked="Delete"></Button>
            <Button Margin="80,10" Text="Zurück" Clicked="Return"></Button>
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>